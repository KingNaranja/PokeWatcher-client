{{#each diaries as |diary|}}
	
	<div id='diary-entry'>
		<section data-id={{diary.id}}>
			<div class='diary-data'>
				<h1 class='userText' data-id={{diary.id}}> <small>Date: {{limit diary.date 10}}</small></h1>

				{{#if diary.note}}
				<p class="userText">{{diary.note}}</p>
				{{else}}
				No note provided.
				{{/if}}
			</div>
			<div class='diary-forms' >
				<button type="submit" class="delete-entry">Remove</button>
				{{!-- <button type="submit" class="update-entry">Update</button> --}}
				{{!-- modal button  --}}
				<button type="button" class="update_btn btn-primary" data-id={{diary.id}} data-target=".showUpdate" data-toggle="modal"
				 data-diary="update">Update</button>
				
				<div class="modal showUpdate" tabindex="-1" role="dialog" data-id={{diary.id}} aria-labelledby="updateModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="updateModalLabel">Update Entry</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<form class="updateEntry" data-id={{diary.id}}>
									<fieldset>
										<input type="datetime" name="diary[date]" placeholder="YYYY-MM-DD">
										<input type="text" name="diary[note]" placeholder="What Happened ?">
										<button type="submit" class="send-update btn btn-primary">Update</button>
									</fieldset>
								</form>
							</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{{/each}}

